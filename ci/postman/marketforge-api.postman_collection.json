{
  "info": {
    "name": "MarketForge API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Backend - Hello API",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/hello",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "hello"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test('Response body contains Hello from MarketForge Backend', function () {",
              "  pm.expect(pm.response.text()).to.include('Hello from MarketForge Backend');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Node microservice - Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:4000/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["health"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test('Response body has status ok', function () {",
              "  var json = pm.response.json();",
              "  pm.expect(json.status).to.eql('ok');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Node microservice - Sample assets",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:4000/api/assets/sample",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "assets", "sample"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test('Response is array with at least 2 assets', function () {",
              "  var json = pm.response.json();",
              "  pm.expect(json.length).to.be.above(1);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
